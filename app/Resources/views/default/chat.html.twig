{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="application/javascript">
        angular.module('wsx').value('User', {{ app.user|serialize|raw }});
        angular.module('wsx').value('wsURI', "ws://{{ gos_web_socket_server_host }}:{{ gos_web_socket_server_port }}")
    </script>
{% endblock %}

{% block body %}
<div class="container-fluid" ng-app="wsx">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar" wsx-sidebar>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
            <ui-view></ui-view>
        </div>
    </div>
</div>
{% endblock %}